<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <record id="test_model_action" model="ir.actions.act_window">
        <field name="name">List Real Estate</field>
        <field name="res_model">test_model</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_model_tree" model="ir.ui.view">
        <field name="name">test_model.tree</field>
        <field name="model">test_model</field>
        <field name="arch" type="xml">
            <tree string="Model Tree View">
                <field name="title"/>
                <field name="post_code"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="available_from"/>
            </tree>
        </field>
    </record>

    <record id="view_model_form" model="ir.ui.view">
        <field name="name">test_model.form</field>
        <field name="model">test_model</field>
        <field name="arch" type="xml">
            <form string="Form Real Estate">
                <sheet>
                    <group>
                        <group>
                            <field name="title"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                        </notebook>
                        <group>
                            <field name="post_code" />
                            <field name="expected_price" />
                            <field name="bedrooms" />
                             <field name="facades" />
                             <field name="garden" />
                            <field name="garden_area" />
                            
                        </group>
                         <group>
                            <field name="active" />
                            <field name="selling_price" />
                            <field name="available_from" />
                            <field name="living_area" />
                            <field name="garage" />
                            <field name="status" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_model_search" model="ir.ui.view">
        <field name="name">test_model.search</field>
        <field name="model">test_model</field>
        <field name="arch" type="xml">
            
             <search string="Model Search View">
                <field name="title"/>
                <field name="available_from"/>
                <field name="status"/>

                 <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    
            </search>
        </field>
    </record>

   

</odoo>